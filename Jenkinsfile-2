pipeline {
    agent {
        node {
            label 'Agent'
        }
    }
    stages {
        stage('Build') {
            steps{
                script {  //using scripts here is a hybrid approach
                    echo "Building....."
                }
            }
        }
        stage('Test'){
            steps {
                script {
                    echo "Testing......"
                }
            }
        }
        stage('Deploy'){
            steps {
                script {
                    echo "Deploying....."
                }
            }
        }
    }
    post {
        always {
            echo 'I will say hello again regardless of build result'
        }
        success {
            echo "I will run this if build is success"
        }
        failure {
            echo "I will run this if build is failed"
        }
    }
}